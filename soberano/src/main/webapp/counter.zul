<?page title="" contentType="text/html;charset=UTF-8"?>
<zk>
	<vbox id="vboxForm" hflex="1" vflex="1" visible="true" apply="co.syscoop.soberano.composers.CounterFormComposer">
		<label value="${labels.caption.field.code}" sclass="Caption"></label>			
		<textbox id="txtCode" readonly="false" maxlength="64" hflex="1" placeholder="${labels.caption.field.codePlaceholder}" constraint="no empty"/>
		<separator></separator>
		<label value="${labels.form.counter.receivers}" sclass="Caption"></label>			
		<intbox id="intNumberOfReceivers" hflex="1" placeholder="${labels.form.counter.receiversPlaceholder}" constraint="no empty, no negative"/>
		<separator></separator>
		<checkbox id="chkIsSurcharged" checked="false" label="${labels.caption.field.isSurcharged}" sclass="Caption"></checkbox>
		<separator></separator>
		<checkbox id="chkDisabled" checked="false" label="${labels.caption.field.disabled}" sclass="Caption"></checkbox>
	</vbox>	
</zk>